<main class="login-wrapper main">
  <div class="login flex direction-column align-items-center">
    <h1 class="login-title">Sign Up</h1>
    <form class="login-form">
      <label for="email-address" class="login-form-label">Email</label>
      <input
        class="login-form-textbox"
        type="email"
        name="email-address"
        id="email-address"
        placeholder="youremail@domain.com"
        required
      />
      <label for="password" class="login-form-label">Password</label>
      <input
        class="login-form-textbox"
        type="password"
        name="password"
        id="password"
        pattern=".{8,}"
        placeholder="********"
        required
        title="Must contain at least 8 or more characters"
      />
      <label for="password" class="login-form-label">Confirm Password</label>
      <input
        class="login-form-textbox"
        type="password"
        name="confirm-password"
        id="confirm-password"
        pattern=".{8,}"
        placeholder="********"
        required
        title="Must contain at least 8 or more characters"
      />
      <input class="login-form-btn" type="submit" value="Submit" />
    </form>
    <a class="login-link" href="./login">Sign in</a>
  </div>
</main>
